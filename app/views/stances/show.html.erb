        <li><a href="path/to/your/img"><img src="http://placehold.it/100x100&text=Thumbnail"></li>
        <li><a href="path/to/your/img"><img src="http://placehold.it/100x100&text=Thumbnail"></li>
        <li><a href="path/to/your/img"><img src="http://placehold.it/100x100&text=Thumbnail"></li>
      </ul>
    </div>
      <% if @author == current_user %>
        <%= button_to "Delete", @stance, method: :delete, class: "button radius" %>
      <% end %>
  </div>
  <!-- Sidebar -->
  <div class="large-5 columns">
    <ul class="side-nav">
      <li><h3><%= @stance.legislators.count %></h3></li>
      <li><h6>Supporting legislators</h6></li>
      <li><h3><%= @stance.upvotes.count %></h3></li>
      <li><h6>Upvotes</h6></li>
      <li>
        <div class="panel">
          <p><%= @stance.user.username %> believes that <%= @stance.legislators.count %> legislators support <%= @stance.position.description %></p>
        </div>
      </li>
    </ul>
  </div>

  <%= render partial: "upvotes/new", locals: {upvote: @upvote} %>
  <!-- End Sidebar -->
</div>




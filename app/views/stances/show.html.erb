  <div class="large-6 columns">
    <h4><%= @author.username %> believes in <%= @position.description %></h4>
    <h6><%= @position.issue.description %></h6>
  </div>
</div>

<div class="row">
  <div class="large-7 columns">
    <div class="panel">
      <ul class="clearing-thumbs small-block-grid-4" data-clearing>
        <li><a href="path/to/your/img"><img src="http://placehold.it/100x100&text=Thumbnail"></li>
        <li><a href="path/to/your/img"><img src="http://placehold.it/100x100&text=Thumbnail"></li>
